{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build", // This label is used in launch.json
            "type": "shell",
            "command": "cmake", 
            "args": [
                "--build",
                "${workspaceFolder}/build", // Adjust the path as necessary
                "--config",
                "Debug", // Or "Release", depending on your build type
                "--target",
                "all", // Or specify your specific target
                "-j", // Add the number of parallel jobs, e.g., "-j4"
                "4"  // Specify the number of jobs if needed
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger."
        }
    ]
}
